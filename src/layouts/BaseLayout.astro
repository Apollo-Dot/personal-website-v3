---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="en" class="h-screen">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="h-screen w-full max-w-[80ch] leading-normal mx-auto my-0 text-white bg-gradient-to-b from-sky-500 via-white to-pink-500 bg-fixed">
    <div class="" />
    <div class="size-screen bg-zinc-600 p-4 flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow">
        <h1>{pageTitle}</h1>
        <slot />
      </main>
    </div>
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
