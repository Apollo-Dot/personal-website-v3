---
import PostTagImage from './PostTagImage.astro';

interface Props {
  image?: {
    url: string,
    alt: string
  },
  titleTag?: string
}

const { image, titleTag } = Astro.props;
---

{
  (image == null && titleTag != null) && 
  <PostTagImage title={titleTag} />
}
{
  (image != null && titleTag == null) && 
  <img
    src={image.url}
    alt={image.alt}
    class="mb-6 shadow-md rounded-lg w-full sm:w-[17rem] sm:mb-0 xl:mb-6 xl:w-full"
    width="1216"
    height="640"
  />
}
