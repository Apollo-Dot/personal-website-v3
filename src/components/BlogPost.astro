---
import PostImage from './PostImage.astro';

interface Props {
  image?: {
    url: string,
    alt: string
  },
  titleTag?: string,
  desc: string,
  title: string,
  url: string
}

const { image, titleTag, desc, title, url } = Astro.props;
---

<li class="relative flex flex-col sm:flex-row xl:flex-col items-start bg-zinc-700 p-6 rounded-md shadow-inset-div">
  <div class="order-1 sm:ml-6 xl:ml-0">
    <h3 class="mb-1 text-zinc-200 font-semibold">
      <span class="mb-1 block text-sm leading-6 text-pink-500"
        >PLACE HOLDER TEXT</span
      >{title}
    </h3>
    <div class="prose prose-slate prose-sm text-zinc-300">
      <p>
        {desc}
      </p>
    </div>
    <a
      class="group inline-flex items-center h-9 rounded-full text-sm font-semibold whitespace-nowrap px-3 focus:outline-none focus:ring-2 bg-slate-100 text-slate-700 hover:bg-slate-200 hover:text-slate-900 focus:ring-slate-500 mt-6"
      href={url}
    >
      Read
      <span class="sr-only">, {title}</span>
      <svg
        class="overflow-visible ml-3 text-slate-300 group-hover:text-slate-400"
        width="3"
        height="6"
        viewBox="0 0 3 6"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M0 0L3 3L0 6"></path>
      </svg></a
    >
  </div>
  <PostImage image={image} titleTag={titleTag} />
</li>
