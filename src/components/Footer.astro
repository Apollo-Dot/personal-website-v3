---
import Social from "./Social.astro";
---

<footer class="bg-zinc-600">
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl">
    <div class="flex flex-col justify-between gap-8 md:flex-row md:items-end">
      <p class="text-2xl font-bold uppercase">River_Dot</p>
    </div>
    <div
      class="grid grid-cols-2 gap-8 py-12 my-4 text-sm font-medium border-y lg:grid-cols-3 xl:col-span-2"
    >
      <div>
        <h3 class="text-base text-white">Information</h3>
        <ul role="list" class="mt-4 space-y-2">
          <li>
            <a
              href="https://oql.avris.it/license/v1.1?c=RiverDot%7Chttps%3A%2F%2Friverdot.tech"
              target="_blank"
              class="text-pink-500 hover:text-white"
            >
              License
            </a>
          </li>
          <li>
            <a
              href="https://github.com/RiverDot/riverdot.github.io"
              target="_blank"
              class="text-pink-500 hover:text-white"
            >
              Source
            </a>
          </li>
          <li>
            <p>Site Version: v8.0.0</p>
          </li>
        </ul>
      </div>
      <div>
        <h3 class="text-base text-white">Socials</h3>
        <ul role="list" class="mt-4 space-y-2">
          <Social
            url="https://mastodon.gamedev.place/@RiverDot"
            platform="Mastodon"
          />
        </ul>
      </div>
    </div>
  </div>
</footer>
